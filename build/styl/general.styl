font = 'Helvetica Neue', Helvetica, Arial, sans-serif;

html, body
  height 100%

ul
  list-style none
  margin 0
  padding 0

.container
  text-align center
  height 100%
  width 100%

  .row
    height 100%
    position relative 
    width 100%
    
    .col-md-12
      -webkit-transform translateX(-50%) translateY(-50%)
      left 50%
      position absolute
      top 50%
      width 970px

      .title
        font-family font
        font-size 120px
        line-height 1
        text-transform uppercase

        .pre-title
          color #999
          font-weight 500

        h2
          font-size 90px
          font-weight 900
          margin 0
      
        .date
          color #999
          font-size 21px

      .cast
        li
          display inline-block

          &:not(:last-child):after
            content ","
            margin-right 5px