font = 'Helvetica Neue', Helvetica, Arial, sans-serif;
accent = #F35C9F
greyed = #999
a = #000

vendor(prop, args)
  -webkit-{prop} args
  -moz-{prop} args
  -ms-{prop} args
  -o-{prop} args
  {prop} args

transition()
  vendor('transition', arguments)

transform()
  vendor('transform', arguments)

html, body
  height 100%

a
  color a

  &:hover
    color a
    text-decoration underline

ul
  list-style none
  margin 0
  padding 0

.container
  text-align center
  height 100%
  width 100%

  .row
    height 100%
    position relative 
    width 100%

    .col-md-12
      transform translateX(-50%) translateY(-50%)
      left 50%
      position absolute
      top 50%
      width 970px

      .title
        font-family font
        font-size 120px
        line-height 1
        text-transform uppercase

        .pre-title
          color greyed
          font-weight 500

        h1, h2
          font-size 90px
          font-weight 900
          margin 0
      
        .date
          color greyed
          font-size 21px

      .cast
        li
          display inline-block

          &:not(:last-child):after
            content ","
            margin-right 5px
      
      h3.rating
        font-size 27px
        text-transform uppercase

        span
          color accent

      [class^="ion"]
        font-size 40px
        margin-top 50px


    &.actor
      ul
        margin 50px auto 0
        width 60%

        li
          position relative
          text-align left

          .date
            color greyed
            position absolute
            right 0
            top 0

.back
  background accent
  color #000
  font-weight 900
  padding 5px 10px
  transition all 100ms ease

  &:hover
    background a
    color #fff
    text-decoration none