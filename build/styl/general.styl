@import "mixins"

html, body
  height 100%

a
  color a

  &:hover
    color a
    text-decoration underline

ul
  list-style none
  margin 0
  padding 0

.container
  text-align center
  height 100%
  width 100%

  .row.index, .row.actor
    height 100%
    margin 0
    position relative 
    width 100%

    .col-md-12
      transform translateX(-50%) translateY(-50%)
      left 50%
      max-width 970px
      position absolute
      top 50%

      @media mobile
        padding 0
        width 100%

      .title
        font-family font
        font-size 120px
        line-height 1
        text-transform uppercase

        .pre-title
          color greyed
          font-weight 500

        h1, h2
          font-size 90px
          font-weight 900
          margin 0

          @media mobile
            font-size 40px
            margin 20px 0
            word-break break-word
      
        .date
          color greyed
          font-size 21px

      .information
        color greyed
        margin-top 20px

        > div
          display inline-block

          &:not(:last-child)
            margin-right 20px

          &.certification
            background greyed
            color #fff
            padding 2px 5px

      .cast
        li
          display inline-block

          &:not(:last-child):after
            content ","
            margin-right 5px
      
      h3.rating
        font-size 27px
        text-transform uppercase

        span
          color accent

      [class^="ion"]
        font-size 40px
        margin-top 50px


    &.actor
      ul
        margin 50px auto 0
        width 60%

        li
          position relative
          text-align left

          .date
            color greyed
            position absolute
            right 0
            top 0

.back
  background accent
  color #000
  font-weight 900
  padding 5px 10px
  transition all 100ms ease

  &:hover
    background a
    color #fff
    text-decoration none