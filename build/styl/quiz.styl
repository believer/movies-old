@import "variables"

#correct, #incorrect
  display none

#quiz, #correct, #incorrect
  background accent
  position absolute
  right 0
  top 0

  .score-wrap
    color #fff
    font-size 16px
    font-weight bold
    margin-bottom 40px

  h2
    color #fff
    font-size 40px

  ul
    margin-top 40px

    li
      cursor pointer
      float left
      font-size 16px
      padding 20px
      width 50%

      &:hover
        color #fff
