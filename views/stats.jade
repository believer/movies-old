extends layout

block content

  //- My Ratings
  - var ratings = [ 'Wtf was that?', 'Terrible', 'Bad', 'Poor', 'Meh', 'Fair', 'Good', 'Great', 'Superb', 'Fucking awesome' ];

  .row.stats
    .col-md-6
      table.table.table-condensed
        thead
          tr
            th Name
            th Movies
        tbody
          each actor in stats.actors
            tr
              td= actor.name
              td= actor.movies
    .col-md-6
      table.table.table-condensed
        thead
          tr
            th Name
            th Movies
        tbody
          each director in stats.directors
            tr
              td= director.name
              td= director.movies